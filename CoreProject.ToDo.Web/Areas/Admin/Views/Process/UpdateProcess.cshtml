@model ProcessUpdateDto
@{
    ViewData["Title"] = "UpdateProcess";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post" asp-action="UpdateProcess" asp-controller="Process">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Tanım:</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama:</label>
        <span asp-validation-for="Desc" class="text-danger"></span>
        <textarea asp-for="Desc" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz:</label>
        <span asp-validation-for="UrgencyId" class="text-danger"></span>
        <select asp-for="UrgencyId" class="form-control" asp-items="ViewBag.Urgencies">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info btn-sm mt-2"><i class="fa-solid fa-square-check mr-2"></i> Kaydet</button>
</form>
@section JavaScript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}
