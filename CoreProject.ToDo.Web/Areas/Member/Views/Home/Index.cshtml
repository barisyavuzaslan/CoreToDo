
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


    <div class="row mt-3">



        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3 text-center">

                <div class="card-body">
                    <h4 class="card-title">Tamamladığınız Görev Sayısı</h4>
                    @if (ViewBag.CompletedProcessCount > 0)
                    {

                        <p class="card-text display-4">@ViewBag.CompletedProcessCount</p>
                        <p><a asp-action="Index" asp-controller="Process" class="btn btn-light btn-sm"><i class="fas fa-chevron-circle-right me-2"></i>İncele</a></p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir görev tamamlamamışsınız.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3 text-center">

                <div class="card-body">
                    <h4 class="card-title">Tamamlanması Gereken Görev Sayısı</h4>
                    @if (ViewBag.NotCompletedProcessCount > 0)
                    {

                        <p class="card-text display-4">@ViewBag.NotCompletedProcessCount</p>
                        <p><a asp-action="Index" asp-controller="ProcessOrders" class="btn btn-light btn-sm"><i class="fas fa-chevron-circle-right me-2"></i>İncele</a></p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir göreviniz yoktur.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3 text-center">

                <div class="card-body">
                    <h4 class="card-title">Yazdığımız Rapor Sayısı</h4>
                    @if (ViewBag.ReportCount > 0)
                    {
                        <p class="card-text display-4">@ViewBag.ReportCount</p>
                    }
                    else
                    {
                        <p class="card-text lead">herhangi bir rapor yazmamışsınız.</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3 text-center">

                <div class="card-body">
                    <h4 class="card-title">Okunmamış Bildirim Sayısı</h4>
                    @if (ViewBag.NotReadNotificationCount > 0)
                    {

                        <p class="card-text display-4">@ViewBag.NotReadNotificationCount</p>
                        <p><a asp-action="Index" asp-controller="Notification" class="btn btn-light btn-sm"><i class="fas fa-chevron-circle-right me-2"></i>İncele</a></p>
                    }
                    else
                    {
                        <p class="card-text lead">Okunmamış bildirimleriniz bulunmamaktadır.</p>
                    }
                </div>
            </div>
        </div>
    </div>



