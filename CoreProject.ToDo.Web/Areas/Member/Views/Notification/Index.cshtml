@model List<NotificationListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}



@if (Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <div class="alert-light p-3 my-2">
            <form method="post" asp-action="Index" class="my-1">
                <p class="lead">
                    <input type="hidden" name="id" value="@item.Id" />
                    @item.Description
                    <button type="submit" class="btn btn-outline-info btn-sm float-end">Okundu</button>
                </p>
            </form>
        </div>
    }
}
else
{

    <div class="alert-light p-3 my-2">
        <p class="lead">
            Okunmamış bildiriminiz bulunmamaktadır.
        </p>
    </div>
}
