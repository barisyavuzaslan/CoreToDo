@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name">Adınız :</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Surname">Soyadınız :</label>
        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
        <input asp-for="@Model.Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">Emailiniz :</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group mt-2">
        <div class="row">
            <div class="col-md-4">
                <div>
                    <h5>Şu an ki resminiz</h5>
                </div>
                <img src="~/img/@Model.Picture" class="w-100" style="height:10rem !important;" />
            </div>
            <div class="col-md-8">
                <div id="alanOnizleme" style="display:none">
                    <h5>Seçtiğiniz resim:</h5>
                    <img id="resimOnizleme" src="" class="w-100" style="height:10rem !important;" />
                </div>

            </div>
            <div class="col-md-12">
                <lable>Resim Seç:</lable>
                <input type="file" class="form-control" name="resim" id="Resim" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-info btn-sm mt-2"><i class="fa-solid fa-square-check mr-2"></i> Kaydet</button>
</form>
@section JavaScript{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Resim").change(function (e) {
                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            })
        });

    </script>
}
