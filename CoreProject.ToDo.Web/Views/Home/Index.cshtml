@model AppUserSignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form class="mt-5 w-25 mx-auto p-4 shadow " asp-action="Login" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı :</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Parola :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
    </div>
    <div class="mt-2">
        <a asp-action="Register" class="btn btn-warning btn-sm">Kayıt Ol</a>
        <input type="submit" class="btn btn-info btn-sm" value="Giriş Yap" />
    </div>
</form>
